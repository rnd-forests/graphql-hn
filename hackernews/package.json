{
  "name": "hackernews-react-apollo",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "apollo-boost": "^0.1.6",
    "apollo-client": "^2.3.1",
    "flow-bin": "^0.72.0",
    "graphql": "^0.13.2",
