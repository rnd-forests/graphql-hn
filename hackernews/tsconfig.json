{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": false,
    "declaration": true,
    "rootDir": "./src/apollo",
    "outDir": "./src/apollo",
    "noImplicitAny": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "noImplicitUseStrict": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/__tests__/*.ts"
  ]
}
